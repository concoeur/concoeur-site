---
const { title = "CONCOEUR" } = Astro.props;
---
<html lang="sv">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="CONCOEUR. " />
    <style is:global>
      body { margin:0; font-family:"Times New Roman", Times, serif; background:#fbfaf7; color:#111; }
      .wrap { max-width: 980px; margin: 0 auto; padding: 64px 20px 72px; }
      header { position: sticky; top: 0; background: rgba(251,250,247,0.9); backdrop-filter: blur(8px); border-bottom:1px solid #ddd; }
      .nav { max-width:980px; margin:0 auto; padding:12px 20px; display:flex; justify-content:space-between; align-items:center; }
      .brand { letter-spacing:.04em; font-size:16px; }
      .menu a { margin-left:14px; font-style: italic; text-decoration:none; }
      .menu a:hover { text-decoration: underline; }
      h1 { font-size: 44px; letter-spacing:.04em; margin: 0 0 12px; }
      p { color:#555; line-height:1.6; max-width:70ch; }
      footer { border-top:1px solid #ddd; margin-top:48px; padding-top:18px; color:#555; font-size:13px; }
      @media (max-width: 820px){
        .nav { flex-direction: column; gap: 8px; align-items:flex-start; }
        h1 { font-size: 36px; }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="nav">
        <a class="brand" href="/">CONCOEUR</a>
        <nav class="menu">
          <a href="/boka">boka tid</a>
          <a href="/kontakt">kontakt</a>
          <a href="/integritet">integritet</a>

        </nav>
      </div>
    </header>

    <main class="wrap">
      <slot />
      <footer>Â© Concoeur AB</footer>
    </main>
  </body>
</html>
